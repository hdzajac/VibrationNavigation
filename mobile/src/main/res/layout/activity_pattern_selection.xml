

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PatternSelectionActivity" >


    <Spinner
        android:id="@+id/pattern_selection_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>

    <GridLayout
        android:id="@+id/pattern_selection_grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="gone"        >
        <Space />

        <Button
            android:id="@+id/pattern_selection_button_top"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="vibrateTop"
            />

        <Button
            android:id="@+id/pattern_selection_button_bottom"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="vibrateBottom"
            />
        <Button
            android:id="@+id/pattern_selection_button_left"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="vibrateLeft"
            />

        <Button
            android:id="@+id/pattern_selection_button_right"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="vibrateRight"
            />

    </GridLayout>

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToNextActivity"
        android:text="Next"
        android:layout_gravity="bottom"
         />
</LinearLayout>



